@using ForumApp.Web.ViewModels.SubCategories
@model SubCategoryInputModel

@{
    ViewData["Title"] = "Create new community";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Create">

    <label asp-for="Title"></label>
    <input asp-for="Title" />
    <span asp-validation-for="Title" class="text-danger"></span>

    <label asp-for="Description"></label>
    <textarea asp-for="Description"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>

    <label asp-for="CategoryId"></label>
    @*TODO: load all Categories from service and transform them to SelectListItem*@
    <select asp-for="CategoryId"></select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>

    <input type="submit" />

</form>