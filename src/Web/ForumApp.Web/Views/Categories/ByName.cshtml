@using ForumApp.Web.ViewModels.Categories
@model SingleCategoryViewModel



<section class="byName-category">
    <article class="byName-category-title">
        <h2>@Model.Title</h2>
    </article>
    @foreach (var subCategory in Model.SubCategories)
    {
        <a href="@subCategory.Url">
            <article class="byName-category-subCategory-title">
                <h3>@subCategory.Title</h3>
            </article>
            <article class="byName-category-subCategory-description">
                <p>@subCategory.Description</p>
            </article>
            <article class="byName-category-subCategory-userUsername">
                @subCategory.AddedByUserUserName
            </article>
        </a>
    }
</section>
